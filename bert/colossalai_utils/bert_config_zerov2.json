{
    "method": "colossalai",
    "model": {
        "type": "bert_small"
    },
    "hyperparameter": {
        "batch_size": 8,
        "num_epochs": 20,
        "steps_per_epoch": 10
    },
    "fp16": {
        "initial_scale": 256,
        "min_scale": 1,
        "growth_factor": 2.0,
        "backoff_factor": 0.5,
        "growth_interval": 1000
    },
    "gradient_clipping": 1.0,
    "zero": {
        "reduce_scatter_bucket_size_mb": 25,
        "fp32_reduce_scatter": false,
        "offload_config": {
            "device": "cpu"
        }
    },
    "use_mem_monitor": true
}
